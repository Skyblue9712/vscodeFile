import tkinter as tk
from tkinter import ttk

def on_slider_change(value):
    label.config(text=f"Selected value: {value} {time_unit.get()}")

# Create the main window
root = tk.Tk()
root.title("Time Slicer Example")

# Create a label
label = tk.Label(root, text="Selected value: 0 days")
label.pack(pady=10)

# Create a slider
slider = ttk.Scale(root, from_=0, to=100, orient="horizontal", command=on_slider_change)
slider.pack(pady=10)

# Create a combobox for selecting time units
time_units = ['days', 'months', 'years', 'weeks']
time_unit = ttk.Combobox(root, values=time_units)
time_unit.set('days')  # Set default value
time_unit.pack(pady=10)

# Run the application
root.mainloop()
